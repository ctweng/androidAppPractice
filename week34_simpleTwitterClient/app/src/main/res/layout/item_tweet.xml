<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="1dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivProfileImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:nestedScrollingEnabled="false"

        android:padding="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvUserName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvBody"
        android:layout_below="@+id/tvUserName"


        android:layout_toRightOf="@+id/ivProfileImage" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibReply"
        android:src="@drawable/reply"
        android:layout_below="@+id/ivProfileImage"
        android:layout_alignRight="@+id/tvBody"

        android:layout_alignEnd="@+id/tvBody" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibFavorite"
        android:src="@drawable/favorite"
        android:layout_alignTop="@+id/ibReply"

        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibRetweet"
        android:layout_alignTop="@+id/ibFavorite"
        android:layout_toRightOf="@+id/ibFavorite"
        android:layout_toEndOf="@+id/ibFavorite"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp"

        android:src="@drawable/retweet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12h"
        android:id="@+id/tvTimestamp"
        android:layout_alignTop="@+id/tvUserName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>