<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/item_photo">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivPhoto"
        android:adjustViewBounds="true"
        android:minHeight="50dp"
        android:layout_below="@+id/ivUser"
        android:layout_alignRight="@+id/tvLikeCount"
        android:layout_alignEnd="@+id/tvLikeCount"
        android:longClickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvCaption"
        android:layout_below="@+id/ivPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:maxLines="3"
        android:minHeight="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvLikeCount"
        android:layout_alignTop="@+id/tvCaption"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minLines="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivUser"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="false"
        android:maxWidth="50dp"
        android:minHeight="30dp"
        android:maxHeight="50dp"
        android:minWidth="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvUsername"
        android:layout_alignBottom="@+id/ivUser"
        android:layout_toRightOf="@+id/ivUser"
        android:layout_toEndOf="@+id/ivUser" />
</RelativeLayout>